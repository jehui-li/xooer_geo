# GEO Agent 环境变量配置示例
# 复制此文件为 .env 并填入实际的 API 密钥和配置

# ==================== API 密钥 ====================

# OpenAI API (ChatGPT)
OPENAI_API_KEY=your_openai_api_key_here

# Google Vertex AI (Gemini)
GOOGLE_PROJECT_ID=your_google_project_id_here
GOOGLE_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Perplexity API
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# X API (Grok)
X_API_KEY=your_x_api_key_here
X_API_SECRET_KEY=your_x_api_secret_key_here
X_ACCESS_TOKEN=your_x_access_token_here
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret_here
X_BEARER_TOKEN=your_x_bearer_token_here

# ==================== 数据库配置 ====================

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=geo_agent
MONGODB_COLLECTION_AUDIT_RESULTS=audit_results
MONGODB_COLLECTION_HISTORICAL_TRENDS=historical_trends

# ==================== 应用配置 ====================

# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE_PATH=logs/geo_agent.log

# 应用环境: development, production, testing
APP_ENV=development

# ==================== GEO Agent 配置 ====================

# 默认测试次数（用于处理非确定性）
DEFAULT_TEST_ITERATIONS=5

# 默认 Temperature 设置列表（逗号分隔）
DEFAULT_TEMPERATURES=0.3,0.7,1.0

# API 请求超时时间（秒）
API_TIMEOUT=60

# API 重试次数
API_MAX_RETRIES=3

# API 重试延迟（秒）
API_RETRY_DELAY=1

# 缓存过期时间（小时）
CACHE_EXPIRY_HOURS=24

# ==================== 成本控制 ====================

# 每日 API 成本预算（美元）
DAILY_COST_BUDGET=100.0

# 每月 API 成本预算（美元）
MONTHLY_COST_BUDGET=3000.0

# ==================== GEO Score 权重配置 ====================

# SOM (模型占有率) 权重
GEO_WEIGHT_SOM=0.4

# 权威引文比权重
GEO_WEIGHT_CITATION=0.3

# 排序权重
GEO_WEIGHT_RANKING=0.2

# 内容准确度权重
GEO_WEIGHT_ACCURACY=0.1
